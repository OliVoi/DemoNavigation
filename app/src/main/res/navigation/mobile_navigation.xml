<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@id/mainFragment">

    <fragment
        android:id="@+id/mainFragment"
        android:name="com.viettelpost.remoteconfig.demonavigation.ui.main.MainFragment"
        android:label="main_fragment"
        tools:layout="@layout/main_fragment">
        <action
            android:id="@+id/action_next"
            app:destination="@id/nextFragment" />
        <action
            android:id="@+id/action_mainFragment_to_navigation_child"
            app:destination="@id/navigation3" />
        <deepLink
            android:id="@+id/deepLink"
            app:uri="https://www.google.com/"
            android:autoVerify="true" />
    </fragment>
    <fragment
        android:id="@+id/nextFragment"
        android:name="com.viettelpost.remoteconfig.demonavigation.ui.main.NextFragment"
        android:label="fragment_next"
        tools:layout="@layout/fragment_next" >
        <action
            android:id="@+id/go_to_view_name"
            app:destination="@id/viewNameFragment" />
    </fragment>
    <fragment
        android:id="@+id/viewNameFragment"
        android:name="com.viettelpost.remoteconfig.demonavigation.ui.main.ViewNameFragment"
        android:label="fragment_view_name"
        tools:layout="@layout/fragment_view_name" >
        <argument
            android:name="getName"
            app:argType="string"
            app:nullable="true"
            android:defaultValue="null" />
    </fragment>
    <navigation android:id="@+id/navigation3"
        app:startDestination="@id/navigation_child">
        <include app:graph="@navigation/navigation_child" />
    </navigation>
</navigation>
